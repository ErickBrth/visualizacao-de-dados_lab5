  <script type="text/javascript">
    var dom = document.getElementById('container');
    var myChart = echarts.init(dom, null, {
      renderer: 'canvas',
      useDirtyRect: false
    });
    var app = {};
    
    var option;

    var anos = ['2014', '2015', '2016', '2017', '2018', '2019', '2020', '2021', '2022', '2023'];
        var chuva_mm = [280,404.6, 386.7, 295, 211.5, 764.8, 497.9, 591.3, 388.5, 938.6, 376.6];

        // Cálculo da variação em relação ao ano anterior
        var variacao = [];
        for (var i = 1; i < chuva_mm.length; i++) {
            variacao.push(chuva_mm[i] - chuva_mm[i - 1]);
        }
  

        var option = {
          title: {
        text: 'Diferença de Volume de Chuvas com o Ano Anterior - Fazenda Carnaúba (Taperoá - PB)'
    },
            tooltip: {
                trigger: 'axis',
                formatter: function (params) {
                    var data = params[0];
                    return `Ano: <b>${data.name}</b><br>Variação: <b>${data.value.toFixed(1)} mm</b>`;
                }
            },
            dataZoom: [
                { type: 'inside', start: 0, end: 100 },
                { start: 0, end: 100 }
            ],
            xAxis: {
                type: 'category',
                data: anos
            },
            yAxis: {
                type: 'value',
                name: 'Variação da Chuva (mm)'
            },
            series: [
                {
                    name: 'Variação da Chuva',
                    type: 'bar',
                    data: variacao,
                    itemStyle: {
                        color: function (params) {
                            return params.value >= 0 ? '#2ca02c' : '#d62728'; // Verde se positivo, vermelho se negativo
                        }
                    }
                }
            ]
        };

    if (option && typeof option === 'object') {
      myChart.setOption(option);
    }

    window.addEventListener('resize', myChart.resize);
  </script>
</body>
